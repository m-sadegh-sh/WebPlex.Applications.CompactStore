@model OrderComplaintModel

@Html.HiddenFor(model => model.Id)

<div class="WebPlex-FormRow">
    @Html.TextAreaFor(model => model.Message, 5, 20, new {
        @class = Html.GetModelState(model => model.Message, "WebPlex-FormInput"),
        placeholder = Html.DisplayNameFor(model => model.Message)
    })
    @Html.ValidationMessageFor(model => model.Message)
</div>

<div class="WebPlex-FormRow">
    @Html.EditorFor(model => model.Priority)
    @Html.ValidationMessageFor(model => model.Priority)
</div>